!!!
%html
  %head
    = partial "meta/base"
    = partial "meta/mobile"
    -# partial "meta/social"
    -# partial "meta/brand"
    = partial "meta/tricks"

    %title= "#{current_page.data.title} #{data.config.title}"

    = stylesheet_link_tag "application"
    = stylesheet_link_tag  "hashgrid" if not build?

  %body{ class: "#{page_classes}" }

    = partial "utils/analytics" if build?

    = yield

    -# Placed at the end of the document so the pages load faster
    = javascript_include_tag  "application"
    = javascript_include_tag  "hashgrid" if not build?
